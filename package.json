{
  "name": "@romainprignon/utils",
  "version": "2.1.0",
  "description": "some useful tools",
  "author": "Romain Prignon <pro.rprignon@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/romainPrignon/utils.git"
  },
  "engines": {
    "node": "^14",
    "npm": "^6.3"
  },
  "source": "dist",
  "main": "index.js",
  "types": "index.d.ts",
  "assets": [
    "type",
    "CHANGELOG.md",
    "LICENSE.md",
    "package-lock.json",
    "package.json",
    "README.md"
  ],
  "bin": {
    "bundle": "./src/script/bundle.js"
  },
  "scripts": {
    "postinstall": "gitmoji --init",
    "compile": "rm -rf dist/ && tsc -p src/",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:src": "tslint --project src/tsconfig.json",
    "lint:test": "tslint --project test/tsconfig.json",
    "test": "jest --maxWorkers=50%",
    "test:debug": "npm run test --detectOpenHandles --forceExit --runInBand --no-cache",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "changelog": "gitmoji-changelog",
    "version": "npm run changelog && git add CHANGELOG.md",
    "version:patch": "npm version --no-commit-hooks patch -m 'ðŸ”– Release v%s'",
    "version:minor": "npm version --no-commit-hooks minor -m 'ðŸ”– Release v%s'",
    "version:major": "npm version --no-commit-hooks major -m 'ðŸ”– Release v%s'",
    "postversion": "git push --follow-tags",
    "bundle": "./src/script/bundle.js bundle/",
    "deploy": "./src/script/deploy.js"
  },
  "dependencies": {
    "@sindresorhus/is": "^4.0",
    "ix": "^4.3.1",
    "lodash": "^4.17.21",
    "make-error-cause": "^2.3",
    "runtypes": "^5.0",
    "type-fest": "^1.1.1",
    "zod": "^1.11.11"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.169",
    "@types/node": "^14.14.45",
    "gitmoji-changelog": "2",
    "gitmoji-cli": "3",
    "husky": "4",
    "jest": "^26.6",
    "pinst": "2",
    "ts-jest": "^26.5",
    "tsd": "^0.11",
    "tslint": "6",
    "tslint-config-standard": "9",
    "tslint-immutable": "6",
    "typescript": "^4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run compile && npm run test:coverage"
    }
  }
}
